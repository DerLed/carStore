<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo8.VehicleSearchController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <TableView fx:id="vehicleList" layoutX="67.0" layoutY="11.0" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Марка" />
            <TableColumn fx:id="modelColumn" prefWidth="75.0" text="Модель" />
            <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Категория" />
            <TableColumn fx:id="registrationNumberColumn" prefWidth="75.0" text="Номер ТС" />
            <TableColumn fx:id="typeVehicleColumn" prefWidth="75.0" text="Тип ТС" />
            <TableColumn fx:id="yearColumn" prefWidth="75.0" text="Год выпуска" />
            <TableColumn fx:id="hasTrailerColumn" prefWidth="75.0" text="Наличие прицепа" />
        </columns>
    </TableView>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label text="Марка" />
                    <TextField fx:id="findBrandTextField" />
                </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label text="Модель" />
                    <TextField fx:id="findModelTextField" />
                </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label text="Категория" />
                    <TextField fx:id="findCategoryTextField" />
                </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label text="Государственный номер" />
                    <TextField fx:id="findRegistrationNumberTextField" />
                </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label text="Год выпуска" />
                    <TextField fx:id="findYearTextField" />
                </children>
            </VBox>
        </children>
    </HBox>
    <Button mnemonicParsing="false" onAction="#addButtonClick" text="Добавить ТС" />
    <Button fx:id="updateButton"  onAction="#updateButtonClick" disable="true" mnemonicParsing="false" text="Редактировать ТС" />

</VBox>
